<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient"
    tools:context=".HeroDetail">

    <Toolbar
    android:id="@+id/hero_detail_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:navigationIcon="@mipmap/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="英雄"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </Toolbar>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/hero_detail_toolbar">
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--背景图片变暗,想了好久！！！-->
                <ImageButton
                    android:id="@+id/hero_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/juyoujing"
                    android:foreground="#60000000"
                    android:clickable="false"
                    />

                <EditText
                    android:id="@+id/hero_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="橘右京"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:background="@null"
                    app:layout_constraintBottom_toTopOf="@+id/hero_detail_alias"
                    app:layout_constraintStart_toStartOf="@id/hero_detail_alias"/>
                <ImageButton
                    android:id="@+id/hero_detail_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/juyoujing_icon"
                    android:scaleType="fitXY"
                    android:clickable="false"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="@id/hero_detail_name"
                    app:layout_constraintBottom_toTopOf="@id/hero_detail_name"/>


                <EditText
                    android:id="@id/hero_detail_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="神梦一刀"
                    android:textSize="16sp"
                    android:textColor="@color/yellow"
                    android:background="@null"
                    android:hint="称号"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toTopOf="@+id/hero_detail_category"
                    app:layout_constraintStart_toStartOf="@id/hero_detail_category"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@id/hero_detail_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="刺客"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:background="@null"
                    android:layout_marginTop="5dp"
                    android:hint="职业"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="@id/hero_detail_image"
                    app:layout_constraintBottom_toBottomOf="@id/hero_detail_image"/>

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@android:color/white"
                    android:id="@+id/hero_detail_favorite"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="#FF6666"
                    app:allow_random_color="true"
                    app:enable_flashing="true"
                    app:click_animation_duration="200"
                    app:shine_animation_duration="1500"
                    app:shine_turn_angle="10"
                    app:small_shine_offset_angle="20"
                    app:shine_count="8"
                    app:siShape="@raw/star"
                    android:layout_margin="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/hero_detail_image"
                    app:layout_constraintEnd_toEndOf="@id/hero_detail_image"/>

                <LinearLayout
                    android:id="@+id/hero_detail_value_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/hero_detail_image">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="生存能力:"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="7dp"
                            />
                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/hero_viability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_min="1"
                            app:dsb_max="9"
                            android:layout_weight="1"
                            android:clickable="false"
                            />
                        <TextView
                            android:id="@+id/hero_viability_value"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="攻击伤害:"
                            android:textSize="22sp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"
                            />
                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/hero_attack_damage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_min="1"
                            app:dsb_max="9"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/hero_attack_damage_value"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="技能效果:"
                            android:textSize="22sp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"
                            />
                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/hero_skill_damage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_min="1"
                            app:dsb_max="9"
                            android:layout_weight="1"
                            android:clickable="false"
                            />
                        <TextView
                            android:id="@+id/hero_skill_damage_value"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="上手难度:"
                            android:textSize="22sp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"
                            />
                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/hero_difficulty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_min="1"
                            app:dsb_max="9"
                            android:layout_weight="1"
                            android:clickable="false"
                            />
                        <TextView
                            android:id="@+id/hero_difficulty_value"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_detail_skill_icons"
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/hero_detail_value_layout"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技能:"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/hero_detail_skill1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@mipmap/libai1"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/hero_skill_button"/>
                    <ImageButton
                        android:id="@+id/hero_detail_skill2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/libai2"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/hero_skill_button"/>
                    <ImageButton
                        android:id="@+id/hero_detail_skill3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@mipmap/libai3"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/hero_skill_button"/>
                    <ImageButton
                        android:id="@+id/hero_detail_skill4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@mipmap/libai4"
                        android:scaleType="fitXY"
                        android:background="@drawable/hero_skill_button"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/hero_detail_skill_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:gravity="top"
                    android:text="请点击技能图标查看详细技能请点击技能图标查看详细技能请点击技能图标查看详细技能请点击技能图标查看详细技能请点击技能图标查看详细技能请点击技能图标查看详细技能请点击技能图标查看详细技能"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/hero_detail_skill_icons" />

                <android.support.v7.widget.CardView
                    android:id="@+id/hero_equip_recommend"
                    app:layout_constraintTop_toBottomOf="@id/hero_detail_skill_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor ="@color/colorPrimaryDark"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="推荐出装"
                            android:textColor="@color/white"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="10dp">
                            <ImageButton
                                android:id="@+id/hero_equip1"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@mipmap/tiejian"
                                android:scaleType="fitXY"
                                android:padding="0dp"
                                />
                            <ImageButton
                                android:id="@+id/hero_equip2"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@mipmap/tiejian"
                                android:padding="0dp"
                                android:scaleType="fitXY"/>
                            <ImageButton
                                android:id="@+id/hero_equip3"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:padding="0dp"
                                android:src="@mipmap/tiejian"
                                android:scaleType="fitXY"/>
                            <ImageButton
                                android:id="@+id/hero_equip4"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:padding="0dp"
                                android:src="@mipmap/tiejian"
                                android:scaleType="fitXY"/>
                            <ImageButton
                                android:id="@+id/hero_equip5"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:padding="0dp"
                                android:src="@mipmap/tiejian"
                                android:scaleType="fitXY"/>
                            <ImageButton
                                android:id="@+id/hero_equip6"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:padding="0dp"
                                android:src="@mipmap/tiejian"
                                android:scaleType="fitXY"
/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/hero_equip_recommend"/>

            </android.support.constraint.ConstraintLayout>


        </ScrollView>


</android.support.constraint.ConstraintLayout>